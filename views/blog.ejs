<%- include('partials/logged-in-header') -%>


<!-- component -->
<div class="max-w-screen-lg mx-auto">

  <main class="mt-10">

    <div class="mb-4 md:mb-0 w-full mx-auto relative">
      <div class="px-4 lg:px-0">
        <h2 class="text-4xl font-semibold text-gray-800 leading-tight">  <%= blog.title %>      </h2>
        <a 
          href="#"
          class="py-2 text-green-700 inline-flex items-center justify-center mb-2"
        >
        <%= blog.author %> 
        </a>
      </div>

      <img src="<%= blog.image%>" class="w-full object-cover lg:rounded" style="height: 28em;"/>
    </div>
    <div class="flex flex-col lg:flex-row lg:space-x-12">
      <div class="px-4 lg:px-0 mt-12 text-gray-700 text-lg leading-relaxed w-full lg:w-3/4">
        <p class="pb-6" style="white-space: pre-wrap">     <%- blog.message%>   </p>  
      </div>
      <%if(blog.user == user.id){ %>
        <form
          action="/blog/deleteBlog/<%= blog.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        ><div class="likes">
          <button class="btn fa fa-trash" type="submit">Delete</button>
        </form>
        <%}%>
    </div>
  </main>
 <a href="/blog" class="btn ">Return To Blog Feed</a>
</div>


      

<%- include('partials/footer') -%>








